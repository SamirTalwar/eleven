#!/usr/bin/env zsh

set -e
set -u
set -o pipefail

app_pid=''

test_script=$(mktemp)
cat > $test_script
chmod +x $test_script

function set_up {
  ./app $1 &
  app_pid=$!
}

function run_test {
  sleep 1
  $test_script
}

function tear_down {
  exit_status=$?
  if [[ -n $app_pid ]] && kill -0 $app_pid >& /dev/null; then
    kill $app_pid
    for i in {1..20}; do
      kill -0 $app_pid >& /dev/null || break
      sleep 0.1
    done
    if kill -0 $app_pid >& /dev/null; then
      echo >&2 "The application (PID ${app_pid}) has not terminated. Better investigate."
    fi
  fi
  rm -f $test_script
  return $exit_status
}

trap tear_down EXIT
set_up $1
run_test
